<h1>CẬP NHẬT KHÓA HỌC</h1>
<form method="POST" action="/courses/{{course._id}}?_method=PUT">
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Description</label>
    <textarea type="text" class="form-control" id="des" name="description" >{{course.description}}</textarea>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">videoId</label>
    <input type="text" class="form-control" id="videoId" name="videoId" value="{{course.videoId}}">
  </div>
  <button type="submit" class="btn btn-primary">Lưu khóa học</button>
</form>